<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Override default customer account creation controller -->
    <preference for="Magento\Customer\Controller\Account\CreatePost" type="MagoArab\PhoneMail\Controller\Account\CreatePost" />
    
    <!-- Override default forgot password post controller -->
    <preference for="Magento\Customer\Controller\Account\ForgotPasswordPost" type="MagoArab\PhoneMail\Controller\Account\ForgotPasswordPost" />
    
    <!-- Customer data section provider -->
    <type name="Magento\Customer\CustomerData\SectionPoolInterface">
        <arguments>
            <argument name="sectionSourceMap" xsi:type="array">
                <item name="phonemail-config" xsi:type="string">MagoArab\PhoneMail\CustomerData\PhoneMailConfig</item>
            </argument>
        </arguments>
    </type>
    
    <!-- Logger configuration -->
    <virtualType name="MagoArabPhoneMailLogger" type="Magento\Framework\Logger\Monolog">
        <arguments>
            <argument name="name" xsi:type="string">phonemail</argument>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">Magento\Framework\Logger\Handler\System</item>
                <item name="debug" xsi:type="object">Magento\Framework\Logger\Handler\Debug</item>
            </argument>
        </arguments>
    </virtualType>
</config>