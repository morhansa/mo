<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Customer account creation plugin -->
    <type name="Magento\Customer\Api\AccountManagementInterface">
        <plugin name="magoarab_phonemail_account_management" type="MagoArab\PhoneMail\Plugin\Customer\AccountManagement" sortOrder="10" disabled="false" />
		 <plugin name="magoarab_phonemail_account_management_login" type="MagoArab\PhoneMail\Plugin\Customer\AccountManagementLogin" sortOrder="5" disabled="false" />
    </type>
     <!-- Checkout layout processor plugin -->
    <type name="Magento\Checkout\Block\Checkout\LayoutProcessor">
        <plugin name="magoarab_phonemail_checkout_layout_processor" type="MagoArab\PhoneMail\Plugin\Checkout\LayoutProcessor" sortOrder="10" disabled="false" />
    </type>
    <!-- Checkout shipping information management plugin -->
<type name="Magento\Checkout\Model\ShippingInformationManagement">
    <plugin name="magoarab_phonemail_shipping_information" type="MagoArab\PhoneMail\Plugin\Checkout\ShippingInformationPhoneHandler" sortOrder="10" disabled="false" />
</type>
<!-- Quote Repository Plugin -->
<type name="Magento\Quote\Api\CartRepositoryInterface">
    <plugin name="magoarab_phonemail_cart_repository" type="MagoArab\PhoneMail\Plugin\Quote\QuoteRepository" sortOrder="10" />
</type>
    <!-- WhatsApp service preference -->
    <preference for="MagoArab\PhoneMail\Api\WhatsAppServiceInterface" type="MagoArab\PhoneMail\Model\WhatsAppService" />
    
    <!-- Logger configuration -->
    <virtualType name="MagoArabPhoneMailLogger" type="Magento\Framework\Logger\Monolog">
        <arguments>
            <argument name="name" xsi:type="string">phonemail</argument>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">Magento\Framework\Logger\Handler\System</item>
                <item name="debug" xsi:type="object">Magento\Framework\Logger\Handler\Debug</item>
            </argument>
        </arguments>
    </virtualType>
    
    <!-- Inject logger into Plugin/Customer/AccountManagement -->
    <type name="MagoArab\PhoneMail\Plugin\Customer\AccountManagement">
        <arguments>
            <argument name="logger" xsi:type="object">MagoArabPhoneMailLogger</argument>
        </arguments>
    </type>
</config>